    "normalize.css": "8.0.0",
    "svg.js": "2.6.6",
    "tslib": "1.9.3"
  },
  "devDependencies": {
    "@types/file-saver": "1.3.1",
    "@types/hammerjs": "2.0.36",
    "@types/jasmine": "2.8.9",
    "@types/mousetrap": "1.6.0",
    "css-loader": "1.0.0",
    "file-loader": "2.0.0",
    "gh-pages": "2.0.1",
    "html-webpack-plugin": "3.2.0",
    "husky": "1.1.1",
    "jasmine-core": "3.2.1",
    "karma": "3.0.0",
    "karma-brief-reporter": "0.0.7",
    "karma-chrome-launcher": "2.2.0",
    "karma-jasmine": "1.1.2",
    "karma-webpack": "3.0.5",
    "less": "3.8.1",
    "less-loader": "4.1.0",
    "lint-staged": "7.3.0",
    "prettier": "1.14.3",
    "style-loader": "0.23.1",
    "ts-loader": "5.2.1",
    "tslint": "5.11.0",
    "typescript": "3.1.1",
    "url-loader": "1.1.1",
    "webpack": "4.20.2",
    "webpack-bundle-analyzer": "3.0.2",
    "webpack-cli": "3.1.2",
    "webpack-dev-server": "3.1.9"
  },
  "lint-staged": {
    "linters": {
      "*.{ts,js,css,less}": [
        "prettier --write",
        "git add"
      ]
    }
